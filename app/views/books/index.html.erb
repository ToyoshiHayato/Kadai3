<%= render 'list', user: @user %>

  <div class="row">
  <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block edit_user_path(@user)" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
  </div>


<h2 class="mt-3">New book</h2>
<%= form_with model: @book_new do |f| %>
<div class="form-group">
<label for="book_title">Title</label><br>
<%= f.text_field :title %>
</div>
<div class="form-group">
<label for="book_opinion">Opinion</label><br>
<%= f.text_area :body %><br>
</div>
<div class="form-group">
<%= f.submit 'Create Book', class:"btn btn-success" %>
</div>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table table-hover table-inverse">
    <thead>
    <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
     </tr>
     </thead>
     <tbody>
<tr>
 <% @books.each do |book| %>
 <td>
 <%= image_tag book.user.get_profile_image %>
 </td>
 <td>
 <%= link_to book_path(book.id) do %>
 <%= book.title %>
 </td>
 <% end %>
 </td>
 <td>
 <%= book.body %><br>
 </td>
 </tr>
 <% end %>
 </tbody>
 </table>
 </div>
 </div>
 </div>
