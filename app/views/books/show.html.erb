<%= flash[:notice] %>
<%= render 'list', user: @user %>

<div class="row">
  <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block edit_user_path(@user.id)" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>


        
<h2 class="mt-3">New book</h2>
<%= form_with model: @book_new do |f| %>
<div class="form-group">
<label for="book_title">Title</label><br>
<%= f.text_field :title %>
</div>
<div class="form-group">
<label for="book_opinion">Opinion</label><br>
<%= f.text_area :body %><br>
</div>
<div class="form-group">
<%= f.submit 'Create Book',class:"btn btn-success" %>
</div>
<% end %>
</div>


<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
    <tbody>
        <tr>
        <td>
         <%= image_tag @book.user.get_profile_image %>
         <%= link_to user_path(@user.id) do %><br>
            <%= @user.name %>
            <% end %>
        </td>
        <td>
            <%= link_to book_path do %>
            <%= @book.title %>
            <% end %>
        </td>
        <td><%= @book.body %></td>
        <td>
        <%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success edit_book_path" %>
        </td>
        <td>
        <% if @book.user == current_user %>
        <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger book_path(@book)" %><br>
        <% end %>
        </td>
        </tr>
      </tbody>
     </table>
   </div>
   </div>
   </div>
   </main>
   <footer>
       <div class="container mt-5">
           <div class="row">
               <div class="mx-auto">
                   <p>CopyRight Infratop.inc</p>
                   </div>
                   </div>
                   </div>
                   </footer>
                   </body>
                   </html>