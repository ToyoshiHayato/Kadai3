<%= render 'list',users: @user %>

  <div class="row">
  <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block edit_user_path(@user)" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
  </div>
 
  

<h2 class="mt-3">New book</h2>
<%= form_with model: @book_new do |f| %>
<div class="form-group">
<label for="book_title">Title</label><br>
<%= f.text_field :title %>
</div>
<div class="form-group">
<label for="book_opinion">Opinion</label><br>
<%= f.text_area :body %><br>
</div>
<div class="form-group">
<%= f.submit 'Create Book', class:"btn btn-success" %>
</div>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Users</h2>
<table class="table">
  <thead>
<tr>
  <th>image</th>
  <th>name</th>
  <th colspan="3"></th>
</tr>
</thead>
<tbody>
<tr>
  <% @users.each do |user| %>
  <td>
  <%= image_tag user.get_profile_image %>
  </td>
    <td>
    <%= user.name %>
    </td>
    <td>
     <%= link_to user_path(user.id) do %>Show
    </td>
  <% end %>
  </tr>
<% end %>
</tbody>
</table>
</div>
</div>
</div>
</main>
<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
    </footer>